{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",
        "rootDir": "src",
        "outDir": "build",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "strictNullChecks": false,
        "typeRoots": ["node_modules/yup"]
    },
    "ts-node": {
        "swc": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts"]
}
